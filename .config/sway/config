  mode 2560x1080@60Hz
  position 0,0
  bg /home/phundrak/Pictures/Wallpapers/nord/spacemars.jpg fill
}

exec swayidle -w \
         timeout 600 'swaymsg "output * power off"' resume 'swaymsg "output * power on"' \
         timeout 601 'plock' \
         before-sleep 'playerctl pause' \
         before-sleep 'plock'

